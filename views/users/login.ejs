<% layout('layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center">
    <div class="row w-100 mt-5">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4 mx-auto">
            <div class="card shadow">
                <form action="/login" method="POST" class="validated-form p-4" novalidate>
                    <h5 class="card-title my-2">LOGIN</h5>
                    <div class="mb-3">
                        <label class="form-label" for="username">아이디</label>
                        <input class="form-control" type="text" id="username" name="username" autofocus required/>
                        <div class="valid-feedback">좋습니다!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">비밀번호</label>
                        <input class="form-control" type="password" id="password" name="password" required/>
                        <div class="valid-feedback">좋습니다!</div>
                    </div>
                    <button class="btn btn-success w-100">로그인</button>
                </form>
            </div>
        </div>
    </div>
</div>
