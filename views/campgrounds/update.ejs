<%layout('layouts/boilerplate')%>
<h1>Update Campgrounds</h1>
<form action="/campgrounds/<%=campground._id %>?_method=PUT"  method="POST">
    <label for="title">Title</label>
    <input type="text" id="title" name="campground[title]" value="<%=campground.title%>" placeholder="input Title"/>
    <label for="price">Price</label>
    <input type="text" id="price" name="campground[price]" value="<%=campground.price%>" placeholder="input Price"/>
    <label for="description">description</label>
    <input type="text" id="description" name="campground[description]" value="<%=campground.description%>" placeholder="input Description"/>
    <label for="location">location</label>
    <input type="text" id="location" name="campground[location]" value="<%=campground.location%>" placeholder="input Location"/>
    <button type="submit">Submit</button>
</form>